<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.ctl.pinjobs.controller.EditMyProfileActivity"
    android:orientation="vertical"
    android:background="@color/SkyBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Förnamn"
        android:id="@+id/textEditMyProfileFnameTextView" />

    <EditText
        android:layout_width="427dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Fnamn"
        android:ems="10"
        android:id="@+id/myProfileFirstNameEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Efternamn"
        android:id="@+id/textEditMyProfileLnameTextView" />

    <EditText
        android:layout_width="452dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Lnamn"
        android:ems="10"
        android:id="@+id/myProfileLastNameEditText"
        android:layout_below="@+id/myProfileFirstNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefon"
        android:id="@+id/textEditMyProfilePhoneTextView" />

    <EditText
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/myProfilePhoneEditText"
        android:layout_below="@+id/myProfileLastNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="tele"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adress"
        android:id="@+id/textEditMyProfileAddressTextView" />

    <EditText
        android:layout_width="437dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/myProfileAddressEditText"
        android:layout_below="@+id/myProfilePhoneEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Gata"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Stad"
        android:id="@+id/textEditMyProfileCityTextView" />

    <EditText
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/myProfileCityEditText"
        android:layout_below="@+id/myProfileAddressEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Stad"
        android:visibility="visible" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spara Ändringar"
        android:id="@+id/myProfileSaveEditProfileButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:onClick="saveNewInputToProfile"/>

</LinearLayout>
