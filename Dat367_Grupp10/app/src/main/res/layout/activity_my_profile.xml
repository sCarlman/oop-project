<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.ctl.pinjobs.profile.MyProfileActivity"
    android:background="@color/SkyBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Namn:"
        android:id="@+id/NameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Carl Albertsson"
        android:id="@+id/ProfileNameTextView"
        android:layout_alignTop="@+id/NameTextView"
        android:layout_toRightOf="@+id/NameTextView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail:"
        android:id="@+id/mailTextView"
        android:layout_below="@+id/NameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="carl.albertsson@gmail.com"
        android:id="@+id/profileMailTextView"
        android:layout_alignTop="@+id/mailTextView"
        android:layout_alignLeft="@+id/ProfileNameTextView"
        android:layout_alignStart="@+id/ProfileNameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefon:"
        android:id="@+id/phoneTextView"
        android:layout_below="@+id/mailTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0706145301"
        android:id="@+id/profilePhoneTextView"
        android:layout_alignTop="@+id/phoneTextView"
        android:layout_alignLeft="@+id/profileMailTextView"
        android:layout_alignStart="@+id/profileMailTextView"
        android:layout_alignRight="@+id/profileMailTextView"
        android:layout_alignEnd="@+id/profileMailTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adress:"
        android:id="@+id/addressTextView"
        android:layout_below="@+id/phoneTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GrenegÃ¥rd 684"
        android:id="@+id/profileAdressTextView"
        android:layout_alignTop="@+id/addressTextView"
        android:layout_alignLeft="@+id/profilePhoneTextView"
        android:layout_alignStart="@+id/profilePhoneTextView"
        android:layout_alignRight="@+id/profilePhoneTextView"
        android:layout_alignEnd="@+id/profilePhoneTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Stad:"
        android:id="@+id/cityTextEdit"
        android:layout_below="@+id/addressTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SVANESUND"
        android:id="@+id/cityTextView"
        android:layout_alignTop="@+id/cityTextEdit"
        android:layout_alignLeft="@+id/profileAdressTextView"
        android:layout_alignStart="@+id/profileAdressTextView"
        android:layout_alignRight="@+id/profileAdressTextView"
        android:layout_alignEnd="@+id/profileAdressTextView" />
</RelativeLayout>
