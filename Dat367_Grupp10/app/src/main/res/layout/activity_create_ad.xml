<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.ctl.pinjobs.Advertisement.CreateAdActivity"
    android:id="@+id/createAd">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Skapa ny annons"
                android:id="@+id/headerTextView"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/adTitleEditText"
                android:text=""
                android:visibility="visible"
                android:layout_below="@+id/adressEditText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="Titel"
                android:layout_column="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/adDescriptionEditText"
                android:text=""
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="Beskrivning"
                android:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/adLocationEditText"
                android:layout_below="@+id/phoneEditText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="visible"
                android:hint="Location"
                android:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/adPhoneEditText"
                android:layout_below="@+id/lastNameEditText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="visible"
                android:hint="ytterligare tel."
                android:layout_column="0"
                android:inputType="phone" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Välj slutdatum för annons"
                android:id="@+id/chooseDateButton" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adEndDateDatePicker"
                android:calendarViewShown="true"
                android:datePickerMode="spinner"
                android:visibility="gone" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionEditText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="31dp"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trädgårdsarbete"
                    android:id="@+id/gardenRadioButton"
                    android:checked="true"
                    android:visibility="visible" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Städ"
                    android:id="@+id/labourRadioButton"
                    android:checked="false"
                    android:visibility="visible" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="övrigt"
                    android:id="@+id/otherRadioButton"
                    android:checked="false"
                    android:visibility="visible" />

            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skapa annons"
                android:id="@+id/createAdButton"
                android:layout_column="0"
                android:visibility="visible"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="createAd"
                />
        </TableLayout>
    </ScrollView>




</RelativeLayout>
